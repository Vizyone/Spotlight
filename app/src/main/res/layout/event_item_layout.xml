<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/event_feed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/event_feed_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/event_feed_name"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/event_feed_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5$"
            android:textAlignment="center"
            android:layout_below="@id/event_feed_image"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/event_feed_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Description"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:layout_below="@id/event_feed_price"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>